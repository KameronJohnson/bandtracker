<h2><%= @band.name() %></h2>

<br>

<h5>Select venues played:</h5>

<% if @venues.any?() %>
  <form action="/bands/<%= @band.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <% @venues.each() do |venue| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="venue_ids[]" value="<%= venue.id() %>"><%= venue.name() %>
        </label>
      </div>
    <% end %>
    <button type="submit" class="btn btn-sm btn-primary">Add Played Venue</button>
  </form>
<% end %>

<br>

<% if @band.venues().any?() %>

  <h5>Venues played:</h5>

  <ul>
    <% @band.venues().each() do |venue| %>
      <li><%= venue.name() %></li>
    <% end %>
  </ul>
<% else %>
<br>
  <p><em>no venues added</em> <a href="/venues">Add venues</a></p>
<% end %>

<br>

<a href="/">[Go back home]</a>
